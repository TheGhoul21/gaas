<div class="ui secondary inverted segment" style="border-radius: 0; margin-bottom: 0">
  <p>CLASS User</p>
</div>
<table class="ui compact celled definition table" style=" margin-top: 0">
  <thead class="full-width">
    <tr>
      <th></th>
      <th colspan="4">User</th>
    </tr>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Registration Date</th>
      <th>E-mail address</th>
      <th>Premium Plan</th>
    </tr>
  </thead>
  <tbody>
    {% for item in collectionData %}
    <tr>
      <td class="collapsing">
        <div class="ui fitted slider checkbox">
          <input type="checkbox"> <label></label>
        </div>
      </td>
      <td>{{ item.id }}</td>
      <td>{{ item.username }}</td>
      <td>{{ item.email }}</td>
      <td>No</td>
    </tr>
    {% endfor %}
  </tbody>
  <tfoot class="full-width">
    <tr>
      <th></th>
      <th colspan="4">
        <div class="ui right floated small primary labeled icon button">
          <i class="user icon"></i> Add User
        </div>
        <div class="ui small  button">
          Approve
        </div>
        <div class="ui small  disabled button">
          Approve All
        </div>
      </th>
    </tr>
  </tfoot>
</table>
